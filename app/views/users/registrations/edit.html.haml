.row
  .small-12
    %h3 Edit User
    %p= "Your main is: #{current_user.name}"

.row
  .small-12
    %h3 Characters

.row
  .small-12
    %h3 Add Auths
    %p You can associate more characters to this account for authentication
    = link_to icon("plus", "Add a another character to authenticate with"), user_omniauth_authorize_path(:crest), title: "add char"

.row
  - current_user.chars.each do |char|
    .small-4.columns
      = char.name
    .small-4.columns
      = char.corp.name
    .small-4.columns
      = button_to "Delete #{char.name}", user_registration_path(char: char.id), method: :delete, title: "delete char #{char.name}" if current_user.chars.count > 1

