%nav.top-bar{ data: { topbar: true }, role: :navigation }
  %ul.title-area
    %li.name
      %h1= link_to "bozo", root_path
    %li.toggle-topbar.menu-icon
      = link_to "#" do
        %span Menu
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.has-dropdown
          = link_to icon("user", current_user.name)
          %ul.dropdown
            %li= link_to "Account", edit_user_registration_path, title: "account"
            %li= link_to "Log Out", destroy_user_session_path, method: :delete, title: "logout"
      - else
        %li
          = link_to icon("bars", "Log In"), user_omniauth_authorize_path(:crest), title: "login"
    %ul.left
      %li
        = link_to "filter", "#"
